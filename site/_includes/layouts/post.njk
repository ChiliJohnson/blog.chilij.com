---
layout: layouts/base-no-logo.njk
templateClass: post-template
---

<article class="post">

  <div class="post-meta">
    <time datetime="{{ date | htmlDateString }}">{{ date | readableDate }}</time>
  </div>

  <h1 class="post-title">
    <span>{{ title }}</span>
  </h1>

  <section class="post-content">
    {{ content | safe }}
  </section>

</article>

<footer>
  <div class="end-mark">
    <img src="{{ '/images/lambda.svg' | url }}" alt="End Mark">
  </div>
</footer>
